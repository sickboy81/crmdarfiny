{
    "rewrites": [
        {
            "source": "/bio",
            "has": [
                {
                    "type": "header",
                    "key": "user-agent",
                    "value": ".*(bot|facebookexternalhit|whatsapp|telegram|slack|twitterbot|pinterest|googlebot|bingbot|crawler).*"
                }
            ],
            "destination": "/api/bio"
        },
        {
            "source": "/bio",
            "destination": "/index.html"
        },
        {
            "source": "/((?!api|assets|favicon|logo).*)",
            "destination": "/index.html"
        }
    ]
}