{
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "/assets/$1"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/bio",
            "has": [
                {
                    "type": "query",
                    "key": "app",
                    "value": "true"
                }
            ],
            "destination": "/index.html"
        },
        {
            "source": "/bio",
            "destination": "/api/bio"
        },
        {
            "source": "/((?!api|assets).*)",
            "destination": "/index.html"
        }
    ]
}